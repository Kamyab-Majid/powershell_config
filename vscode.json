{
  "flake8.args": [
    "--max-line-length=200"
  ],
  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "none"
  },
  "python.analysis.autoImportCompletions": true, // Automatically import modules for completions
  "python.testing.pytestEnabled": true, // Enable pytest for testing (install the extension if needed)
  "editor.tabSize": 4, // Set the tab size to 4 spaces
  "editor.formatOnSave": true, // Enable auto-formatting on save
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/__pycache__": true, // Exclude __pycache__ directories from the explorer
    "**/*.pyc": true // Exclude .pyc files from the explorer
  },
  "python.languageServer": "Pylance", // Use Pylance as the language server (install the extension if needed)
  "remote.SSH.remotePlatform": {
    "ec2-3-98-200-236.ca-central-1.compute.amazonaws.com": "linux",
    "virginia": "linux",
    "ec2-52-6-116-222.compute-1.amazonaws.com": "linux",
    "data_generator": "linux",
    "mathnasium": "linux"
  },
  "python.analysis.completeFunctionParens": true,
  "files.autoSave": "afterDelay",
  "workbench.colorCustomizations": {},
  "editor.maxTokenizationLineLength": 300,
  "editor.fontSize": 16,
  "git.autofetch": true,
  "terminal.integrated.fontFamily": "MesloLGLDZ Nerd Font Mono",
  "terminal.integrated.fontSize": 18,
  "scm.inputFontSize": 16,
  "debug.console.fontSize": 16,
  "markdown.preview.fontSize": 16,
  "chat.editor.fontSize": 16,
  "markdown.preview.lineHeight": 16,
  "workbench.iconTheme": "vscode-icons",
  "explorer.confirmDragAndDrop": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "explorer.confirmDelete": false,
  "workbench.colorTheme": "Darcula Pycharm with Dark GUI",
  "editor.defaultFormatter": "ms-python.black-formatter",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "markdown-pdf.convertOnSave": true,
  "markdown-pdf.headerTemplate": "",
  "jupyter.askForKernelRestart": false,
}
